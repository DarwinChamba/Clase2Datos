<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MasterDetail" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MasterDetail" parent="Base.Theme.MasterDetail" />

    <style name="MasterDetail" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:colorPrimaryDark">@color/colorFondo</item>
    </style>

    <style name="MisEstilos">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapSentences|textAutoComplete|textAutoCorrect</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:drawableStart">@drawable/add_person</item>
    </style>
    <style name="MisEstilosImagen">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:drawableStart">@drawable/add_person</item>
    </style>


</resources>